<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_assignment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    android:background="@color/backgroundColor"
    tools:context="com.housekeepingmanagingapp.activity.CreateAssignmentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/tvRoomNo"
                android:text="Click To Select RoomNo"
                android:textColor="#bdbdbd"
                android:textColorHint="#bdbdbd"
                android:textSize="15sp"
                android:ems="15"
                android:layout_gravity="center"
                android:padding="10dp"

                />
            <View
                android:layout_width="wrap_content"
                android:background="#bdbdbd"
                android:layout_height="2dp"

                ></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/tvHouseKeeperName"
                android:text="Click To Select Housekeeper"
                android:textColor="#bdbdbd"
                android:textColorHint="#bdbdbd"
                android:textSize="15sp"
                android:ems="15"
                android:layout_gravity="center"
                android:padding="10dp"
                android:theme="@style/MyEditTextTheme"

                />
            <View
                android:layout_width="wrap_content"
                android:background="#bdbdbd"
                android:layout_height="2dp"

                ></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/tvTask"
                android:textStyle="bold"
                android:textColor="#bdbdbd"
                android:textColorHint="#bdbdbd"
                android:textSize="15sp"
                android:ems="15"
                android:text="Task List"
                android:layout_gravity="center"
                android:padding="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/graybackground"
                android:layout_height="wrap_content">

            <ScrollView
                android:nestedScrollingEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/taskBoxHeight">


            <LinearLayout
                android:orientation="vertical"
                android:padding="10dp"
                android:id="@+id/lvCreateTask"

                android:layout_width="match_parent"
                android:layout_height="200dp">


            </LinearLayout>
            </ScrollView>
            </LinearLayout>
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btnAddMore"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Add Task"
                android:textColor="#fff"
                android:clickable="true"
                android:background="@drawable/greenbutton"
                android:textSize="14sp"

                />
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btnDone"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:text="Done"
                android:textColor="#fff"
                android:clickable="true"
                android:background="@drawable/greenbutton"
                android:textSize="18sp"

                />
        </LinearLayout>
    </ScrollView>
    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        android:visibility="invisible"
        style="@style/SpinKitView.Large.DoubleBounce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:SpinKit_Color="#e19227"

        />
</RelativeLayout>
