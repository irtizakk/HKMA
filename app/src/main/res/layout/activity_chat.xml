<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="20sp"
            android:id="@+id/tvUserName"
            android:textColor="#fff"
            android:text="User Name"
            android:background="#0e4375"
            android:gravity="center"
            />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
    android:id="@+id/rvChat"
        android:layout_weight="1"
        android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"

    android:layout_marginTop="8dp">

</android.support.v7.widget.RecyclerView>


    <ImageView
        android:id="@+id/ivNoDataAvailable"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/no_chat_available"
        android:layout_gravity="center"

        />

    <TextView
        android:id="@+id/tvNoTextAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="No Chats yet"
        android:layout_gravity="center"


        />
</LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusableInTouchMode="true"
        android:gravity="bottom"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:orientation="horizontal"
       >

        <ImageView
            android:id="@+id/ivAttachButton"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="4"
            android:padding="4dp"
            android:visibility="gone"
            android:src="@drawable/attachment" />

        <EditText
            android:paddingLeft="10dp"
            android:id="@+id/txtMessageArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Write a message..."
            android:maxHeight="80dp"
            android:textColor="#000"
            android:textColorHint="#c9c9c9" />

        <ImageView
            android:id="@+id/ivSendButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="4dp"
            android:src="@android:drawable/ic_menu_send" />


    </LinearLayout>
</LinearLayout>
