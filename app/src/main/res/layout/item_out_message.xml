<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:minWidth="100dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_outcoming_message">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="YOU"
            android:textSize="13sp"
            android:textColor="#fff"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/tvTextMessage"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUserName"
            android:textColor="@android:color/white"
            android:layout_marginTop="5dp"
            android:text="dsfsdfds"
            android:textSize="13sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />

        <TextView
            android:id="@+id/tvMessageTime"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivMessageImage"
            android:text="sdfsdfsd"
            android:textSize="13sp"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:layout_width="200dp"
            android:layout_marginTop="5dp"
            android:id="@+id/ivMessageImage"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"
            android:layout_height="150dp"
            android:layout_below="@+id/tvTextMessage"

            />
    </RelativeLayout>
</RelativeLayout>