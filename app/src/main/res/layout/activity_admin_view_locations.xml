<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.housekeepingmanagingapp.fragments.ViewHouseKeepersFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGO"
        android:textSize="70sp"
        android:textColor="#b6b6b6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/tvLogo"
        />

    <Spinner
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/spinnerLocations"
        android:layout_marginRight="80dp"
        android:layout_width="wrap_content"
        android:paddingLeft="20dp"
        android:layout_gravity="center"
        android:overlapAnchor="false"
        android:dropDownVerticalOffset="-60dp"
        android:dropDownWidth="500dp"
        android:background="@drawable/spinner_back"
        android:layout_height="50dp">
    </Spinner>
    <Button
        android:layout_centerInParent="true"
        android:layout_below="@+id/spinnerLocations"
        android:layout_marginTop="10dp"
        android:id="@+id/btnContinue"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Continue"
        android:textColor="#fff"
        android:clickable="true"
        android:background="@drawable/greenbutton"
        android:textSize="18sp"

        />
    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        android:visibility="invisible"
        style="@style/SpinKitView.Large.DoubleBounce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:SpinKit_Color="#e19227"

        />
    <ImageView
        android:id="@+id/ivAddLocation"
        android:layout_width="@dimen/fabIconWidthAndHeight"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/fabIconWidthAndHeight"
        android:layout_gravity="bottom|end"
        android:src="@drawable/icon_add_location"
        android:layout_margin="@dimen/fab_margin"
        />
    <TextView
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Select Location From Drop Down And Continue "
        />
</RelativeLayout>